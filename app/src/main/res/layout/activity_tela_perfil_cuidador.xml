<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPerfilCuidador"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/azulTeste"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!--
            <ImageView
                android:id="@+id/imageViewFoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                />
              -->

            <TextView
                android:id="@+id/textViewNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Cuidador"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"/>

            <!-- Campo para CPF -->

            <EditText
                android:id="@+id/edNome"
                style="@style/Edit_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Nome"
                android:inputType="number"
                android:maxLength="11" />

            <EditText
                android:id="@+id/editTextCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF"
                android:inputType="number"
                android:maxLength="11"
                android:layout_marginBottom="8dp"
                style="@style/Edit_Text"
                />


            <EditText
                android:id="@+id/edDataNascimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de Nascimento"
                android:inputType="number"
                android:maxLength="3"
                style="@style/Edit_Text"
                />


            <EditText
                android:id="@+id/editTextTelefoneCuidador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                android:inputType="number"
                android:maxLength="11"
                android:layout_marginBottom="8dp"
                style="@style/Edit_Text"
                />


            <EditText
                android:id="@+id/edEmailCuidador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                style="@style/Edit_Text"

                />


            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:backgroundTint="@color/light_green"
                android:text="Voltar"
                android:drawableRight="@drawable/btnhome"
                android:padding="15dp"
                android:textSize="18dp"
                android:background="@drawable/container_components"

                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>