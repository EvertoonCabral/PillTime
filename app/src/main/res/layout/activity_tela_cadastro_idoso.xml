<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroCuidador"
    android:orientation="vertical"
    android:background="@color/white"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCadastro"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:background="@drawable/background_topo"
                android:drawableEnd="@drawable/ic_idoso_cadastro"
                android:padding="40dp"
                android:drawablePadding="-20dp"
                android:gravity="center"
                android:text="Cadastro Idoso(a)"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />




            <TextView
                android:id="@+id/txtNomeCompletoCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Nome completo: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNomeCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_nome"
                />

            <TextView
                android:id="@+id/txtEmailCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Email: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEmailCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_email_blue"
                />

            <TextView
                android:id="@+id/txtSenhaCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:text="Senha: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edSenhaCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_eye_blue"
                android:inputType="textPassword"
                android:background="@drawable/bordaredonda_azul"/>


            <TextView
                android:id="@+id/txtCPFCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="CPF: "
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCPFCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_cpf"
                />

            <TextView
                android:id="@+id/txtTelefoneCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Telefone: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edTelefoneCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:hint="(DD)12345-6789"
                android:inputType="text"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_fone"/>

            <TextView
                android:id="@+id/txtDataNascCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Dt. Nascimento: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edDataNascCadastroIdoso"
                    style="@style/Edit_Text"
                    android:layout_width="200dp"
                    android:layout_marginTop="5dp"
                    android:hint="____/_____/____"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:background="@drawable/bordaredonda_azul"/>

                <ImageButton
                    android:id="@+id/btnCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendario" />

            </LinearLayout>
            <TextView
                android:id="@+id/txtObsIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Observações: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edObsIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:background="@drawable/bordaredonda_azul"/>

            <TextView
                android:id="@+id/txtCPFcuidador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="CPF do Cuidador: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCPFCuidadorCadIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_cpf"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:text="Endereço"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@color/azul"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtCepIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="CEP"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCepIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textAllCaps="true"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_location"
                />



            <TextView
                android:id="@+id/txtCidadeCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Estado"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />




            <EditText
                android:id="@+id/edEstadoCadastroCuidador"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textAllCaps="true"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_location"/>

            <TextView
                android:id="@+id/txtEstadoCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Cidade"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCidadeCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_city"/>

            <TextView
                android:id="@+id/txtBairroCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Bairro"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edBairroCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_bairro"/>

            <TextView
                android:id="@+id/txtRuaCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Rua"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edRuaCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_rua"/>
            <TextView
                android:id="@+id/txtComplementoCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Complemento"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edComplementoCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:background="@drawable/bordaredonda_azul"
                android:drawableRight="@drawable/ic_complemento"/>

            <TextView
                android:id="@+id/txtNumeroCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Nº"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNumeroCadastroCuidador"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:background="@drawable/bordaredonda_azul"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSalvarCadastro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:background="@drawable/btn_salvar"
                android:drawableRight="@drawable/ic_check_sucesso"
                android:drawablePadding="-20dp"
                android:text="@string/salvar"
                android:padding="10dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/background_bottom"
                android:gravity="center"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>