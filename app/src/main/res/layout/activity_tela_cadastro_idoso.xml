<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroCuidador"
    android:orientation="vertical"
    android:background="@color/azul"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCadastro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/white"
                android:text="Cadastro Idoso"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logoCadastoIdoso"
                style="@style/ContainerComponentes"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:src="@drawable/logoredondo"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/txtNomeCompletoCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="Nome completo"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNomeCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"

                />

            <TextView
                android:id="@+id/txtEmailCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEmailCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/txtSenhaCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:text="Senha"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edSenhaCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_eye"
                android:inputType="numberPassword" />


            <TextView
                android:id="@+id/txtCPFCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="CPF"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCPFCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtTelefoneCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Telefone"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edTelefoneCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:hint="(DD)12345-6789"
                android:inputType="text" />

            <TextView
                android:id="@+id/txtDataNascCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Data de Nascimento"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edDataNascCadastroIdoso"
                    style="@style/Edit_Text"
                    android:layout_width="200dp"
                    android:layout_marginTop="5dp"
                    android:hint="____/_____/____"
                    android:inputType="date"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar" />

            </LinearLayout>
            <TextView
                android:id="@+id/txtObsIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Observaoes"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edObsIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtCPFcuidador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="CPF do Cuidador"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCPFCuidadorCadIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:text="EndereÃ§o"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCidadeCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Estado"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEstadoCadastroCuidador"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/txtEstadoCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Cidade"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCidadeCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text" />

            <TextView
                android:id="@+id/txtBairroCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Bairro"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edBairroCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text" />

            <TextView
                android:id="@+id/txtRuaCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Rua"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edRuaCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text" />
            <TextView
                android:id="@+id/txtComplementoCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Complemento"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edComplementoCadastroIdoso"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text" />

            <TextView
                android:id="@+id/txtNumeroCadastroIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="NÂº"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNumeroCadastroCuidador"
                style="@style/Edit_Text"
                android:layout_width="100dp"
                android:layout_marginTop="5dp"
                android:inputType="number" />


            <Button
                android:id="@+id/btSalvarCadastro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:background="@drawable/container_components"
                android:backgroundTint="@color/light_green"
                android:drawableRight="@drawable/ic_arrow_next"
                android:paddingRight="15dp"
                android:text="@string/salvar"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>