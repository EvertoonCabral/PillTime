<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroCuidador"
    android:orientation="vertical"

    >



    <TextView
        android:id="@+id/txtCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro cuidador"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_people_people"
        />
    <TextView
        android:id="@+id/logoCadastoCuidador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
    />


    <TextView
        android:id="@+id/txtNomeCompletoCadastroCuidador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome completo"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="40dp"
    />
    <EditText
        android:id="@+id/edNomeCadastroCuidador"
        style="@style/Edit_Text"
        android:inputType="text"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/txtEmailCadastroCuidador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/edEmailCadastroCuidador"
        style="@style/Edit_Text"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/txtSenhaCadastroCuidador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/edSenhaCadastroCuidador"
        style="@style/Edit_Text"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_eye"
        />
    <TextView
        android:id="@+id/txtConfSenhaCadastroCuidador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Senha"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/edConfSenhaCadastroCuidador"
        style="@style/Edit_Text"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_eye"
        />

    <Button
        android:id="@+id/btProximocadastoCuidador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proximo"
        android:layout_margin="40dp"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_arrow_next"
        />

</LinearLayout>