<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroCuidador"
    android:orientation="vertical"
    android:background="@color/azulTeste"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_people_people"
                android:text="Cadastro cuidador"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logoCadastoCuidador"
                style="@style/ContainerComponentes"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:src="@drawable/logoredondo"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/txtNomeCompletoCadastroCuidador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="Nome completo"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNomeCadastroCuidador"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="text"

                />

            <TextView
                android:id="@+id/txtEmailCadastroCuidador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEmailCadastroCuidador"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/txtSenhaCadastroCuidador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:text="Senha"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edSenhaCadastroCuidador"
                style="@style/Edit_Text"
                android:layout_marginTop="5dp"
                android:inputType="numberPassword"
                android:drawableRight="@drawable/ic_eye"
                />

            <TextView
                android:id="@+id/txtConfSenhaCadastroCuidador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:text="Confirmar Senha"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edConfirmarSenha"
                style="@style/Edit_Text"
                android:inputType="numberPassword"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_eye"
            />

            <Button
                android:id="@+id/btSalvarCadastro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:drawableRight="@drawable/ic_arrow_next"
                android:textSize="20dp"
                android:backgroundTint="@color/light_green"
                android:background="@drawable/container_components"
                android:paddingRight="15dp"
                android:text="@string/salvar"
                android:textColor="@color/black" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>