<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Título do Alarme -->
    <TextView
        android:id="@+id/tvAlarmTitle"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:text="Título do Alarme"
        android:layout_gravity="center"
        android:background="@drawable/background_topo"
        android:drawableEnd="@drawable/ic_clock6"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="40dp"
        android:drawablePadding="-20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />


    <ImageView
        android:id="@+id/imgAlarme"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tvAlarmDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do Alarme"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@color/azul"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/tvAlarmTitle"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceitar"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/btn_salvar"
            android:layout_below="@id/tvAlarmDescription"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/btnDeny"
            android:drawableRight="@drawable/ic_accept"
            android:padding="10dp"
            android:layout_weight="1"
            />

        <!-- Botão Negar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negar"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/btn_recusar"
            android:drawableRight="@drawable/ic_cancelar"
            android:padding="10dp"
            android:layout_below="@id/tvAlarmDescription"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"

            />

    </LinearLayout>

    <!-- Botão Aceitar -->


</LinearLayout>
