<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaConfPerfilIdoso"
    android:orientation="vertical"
    android:background="@color/white"

    >

<TextView
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:text="Configuração de Perfil"
    android:drawableEnd="@drawable/ic_edit_pessoa"
    android:textSize="20dp"
    android:drawablePadding="-20dp"
    android:background="@drawable/background_topo"
    android:textStyle="bold"
    android:gravity="center"
    android:padding="40dp"
    android:textColor="@color/white"
    />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:text="Nome: "
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edNomeUsuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bordaredonda_azul"
            style="@style/Edit_Text"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:inputType="text"
            android:text="Senha"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/edSenhaUsuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Edit_Text"
            android:background="@drawable/bordaredonda_azul"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"
            android:hint="*********"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_eye_blue"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:text="E-mail"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edEmailUsuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Edit_Text"
            android:background="@drawable/bordaredonda_azul"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"
            android:hint="teste@gmail.com"
            android:inputType="textEmailAddress"
            android:drawableRight="@drawable/ic_email_blue"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:text="Telefone"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edTelefoneUsuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Edit_Text"
            android:background="@drawable/bordaredonda_azul"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"
            android:inputType="phone"
            android:hint="(DD)9 9999-0000"
            android:drawableRight="@drawable/ic_fone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:text="Data de Nascimento: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edDataNascUsuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Edit_Text"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"
            android:inputType="date"
            android:background="@drawable/bordaredonda_azul"
            android:drawableRight="@drawable/ic_calendario_menor"
            android:hint="dd/mm/yyyy"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:text="CPF: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edCPFUsuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Edit_Text"
            android:layout_marginHorizontal="30dp"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/bordaredonda_azul"
            android:drawableRight="@drawable/ic_cpf"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:inputType="text"
            android:text="Observações: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edOBSUsuario"
            style="@style/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bordaredonda_azul"
            android:padding="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSalvarEditPerfil"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_salvar"
            android:drawablePadding="-10dp"
            android:drawableRight="@drawable/ic_check_sucesso"
            android:padding="20dp"
            android:text="@string/confirmar"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAlterarEndereco"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_cadastro"
            android:drawableRight="@drawable/ic_config_black"
            android:padding="10dp"
            android:text="Alterar Endereço"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/background_bottom"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</ScrollView>
</LinearLayout>