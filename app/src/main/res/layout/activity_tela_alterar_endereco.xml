<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaAlterarEndereco"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:text="Configuração de Endereço"
        android:textSize="23dp"
        android:background="@drawable/background_topo"
        android:drawableRight="@drawable/ic_address"
        android:padding="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:text="CEP: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCepUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="8"
                android:drawableRight="@drawable/ic_location"
                android:background="@drawable/bordaredonda_azul"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuscarCep"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_upload"
                android:drawableRight="@drawable/ic_search"
                android:padding="10dp"
                android:text="Buscar CEP"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:text="Rua: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edRuaUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_rua"
                android:background="@drawable/bordaredonda_azul"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:text="Bairro: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edBairrolUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_bairro"
                android:background="@drawable/bordaredonda_azul"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:text="Cidade: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCidadeUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_city"
                android:background="@drawable/bordaredonda_azul"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:text="Estado: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEstadoUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_location"
                android:background="@drawable/bordaredonda_azul"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:text="Número: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNumLogradouroUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="number"

                android:background="@drawable/bordaredonda_azul"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:inputType="text"
                android:text="Complemento: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edComplementoUsuario"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:background="@drawable/bordaredonda_azul"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSalvar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_salvar"
                android:drawableRight="@drawable/ic_check_sucesso"
                android:padding="10dp"
                android:text="@string/confirmar"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLimpar"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_cadastro"
                android:drawableRight="@drawable/ic_config_black"
                android:padding="10dp"
                android:text="Limpar Endereço"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/background_bottom"
                android:gravity="center"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />


        </LinearLayout>

    </ScrollView>


  </LinearLayout>