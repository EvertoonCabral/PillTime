<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaAlterarEndereco"
    android:orientation="vertical"
    android:background="@color/azulTeste"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuração de Endereço"
        android:textSize="20dp"
        android:background="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="CEP"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCepUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="8"
                android:drawableRight="@drawable/ic_config_black"
                />

            <Button
                android:id="@+id/btnBuscarCep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/container_components"
                android:backgroundTint="@color/light_green"
                android:padding="10dp"
                android:text="Buscar CEP"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="Rua"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edRuaUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_config_black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="Bairro"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edBairrolUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_config_black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="Cidade"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCidadeUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_config_black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="Estado"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEstadoUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:drawableRight="@drawable/ic_config_black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Número"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNumLogradouroUsuario"
                android:layout_width="200dp"
                android:layout_height="60dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="number"
                android:drawableRight="@drawable/ic_config_black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:inputType="text"
                android:text="Complemento"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edComplementoUsuario"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                style="@style/Edit_Text"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_config_black"
                />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/container_components"
                android:drawableRight="@drawable/ic_check_sucesso"
                android:padding="10dp"
                android:text="@string/confirmar"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnLimpar"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/container_components"
                android:backgroundTint="@color/light_green"
                android:drawableRight="@drawable/ic_config_black"
                android:padding="10dp"
                android:text="Limpar Endereço"
                android:textSize="14dp" />

        </LinearLayout>

    </ScrollView>


  </LinearLayout>